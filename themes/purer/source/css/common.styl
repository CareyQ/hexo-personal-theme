*, *:before, *:after
    box-sizing: border-box

html, body
    position: relative
    overflow-x: hidden

body
    margin: 0
    font-family: 'Helvetica Neue', Helvetica, Arial, 'PingFang SC', 'Lantinghei SC', 'Microsoft Yahei', 'Hiragino Sans GB', 'Microsoft Sans Serif', 'WenQuanYi Micro Hei', sans-serif
    font-size: 14px
    line-height: 1.57
    color: #333
    background-color: #fff

img
    max-width: 100%
    height: auto
    border: 0

.img-circle
    border-radius: 50%

h1, h2, h3, h4, h5, h6
    line-height: 1.1
    font-weight: 500
    color: inherit

h1, h2, h3
    margin-top: 20px
    margin-bottom: 10px

p
    line-height: 32px
    margin: 0 0 10px 0

ul, ol
    margin-top: 0
    margin-bottom: 10px

a
    color: #0969da
    text-decoration: none

@import './sidebar.styl'