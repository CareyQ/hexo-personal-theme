.sidebar-right
    position: fixed
    top: 0
    right: 0
    bottom: 0
    width: 18%
    padding: 40px 32px 32px
    overflow-x: hidden
    overflow-y: auto
    background-color: #fdfdfd
    border-left: 1px solid #f6f6f6
    scrollbar-width: none
    -ms-overflow-style: none

    &::-webkit-scrollbar
        display: none

.widget
    margin-bottom: 20px

.widget-title
    display: flex
    align-items: center
    margin-bottom: 10px

    img
        width: 24px
        height: 24px
        margin-right: 10px

    span
        font-size: 18px
        font-weight: 600

.widget-categories
    li span
        margin-left: 6px
        color: #999

        &:before
            content: '('

        &:after
            content: ')'

.widget-content
    ul
        padding-left: 26px

    li
        line-height: 1.8

.widget-tag-cloud .wdiget-content
    padding-top: 6px

    a
        display: inline-block
        margin-right: 3px
        margin-bottom: 2px
        padding: 2px 6px
        background-color: #eee
        border-radius: 3px

.widget-toc
    ol
        list-style: none
        padding-left: 8px

        ol
            padding-left: 26px

.skill-item
    display: flex
    justify-content: space-between
    margin-bottom: 2px

.star
    font-size: 16px

.label
    display: inline-block
    padding: 0.3em 0.6em
    font-size: 75%
    line-height: 1
    color: #777
    text-align: center
    white-space: nowrap
    vertical-align: baseline
    border-radius: 0.25em
    background-color: #eee

.widget-posts
    p
        margin: 0

    .item-category
        line-height: 1
        font-size: 13px
        color: #0969da

    .item-date
        line-height: 1
        font-size: 12px
        color: #999

    .item-title a
        white-space: nowrap
        text-overflow: ellipsis

.widget-post-item
    margin-bottom: 24px