.sidebar
    position: fixed
    top: 0
    left: 0
    bottom: 0
    max-width: 330px
    width: 100%
    color: #fff
    background-color: #24292f

.sidebar-header
    padding: 32px

.sidebar-profile
    display: flex
    align-items: center

#avatar
    margin-right: 16px
    width: 72px
    height: 72px

.author
    margin-top: 0
    margin-bottom: 4px
    font-size: 30px
    font-weight: 600

.location
    display: flex
    align-items: center
    margin: 0
    font-size: 14px

    img
        display: block
        margin-right: 4px
        height: 22px

    span
        opacity: 0.75
        line-height: 1

.author-title
    margin-top: 24px
    margin-bottom: 14px
    padding: 10px 0
    font-size: 19px
    font-weight: 800
    letter-spacing: 0.4px
    opacity: 0.7
    line-height: 1
    text-align: center
    border: 1px solid rgba(255, 255, 255, 0.89)
    border-left: 0
    border-right: 0

.sidebar-nav
    ul
        padding-left: 0
        list-style: none

    a
        color: inherit

.menu-item
    .iconfont
        margin-right: 18px
    a
        position: relative
        display: block
        padding: 10px 32px
        line-height: 21px
    &:hover
        background-color: #222
