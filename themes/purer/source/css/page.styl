.page-header
    margin-top: 42px

    img
        vertical-align: text-bottom
        height: 36px
        width: 36px
        margin-right: 10px

    p
        color: #777

.page-content
    margin-bottom: 20px

.panel-title
    font-family: 'JetBrainsMono'

    i
        font-size: 18px

    .pure-tag
        font-size: 16px

.item-post
    padding: 8px 0
    font-size: 16px
    color: #777

.tag-nav
    ul
        list-style: none
        padding: 0

    li
        display: inline-block
        margin-right: 15px
        margin-bottom: 4px

.text-muted
    color: #777

.tags-section
    margin-bottom: 32px
    padding-bottom: 10px
    border-bottom: 1px solid #eee

    .item-post
        display: inline-block
        padding: 2px 0
        width: 45%

    &:last-child
        border: 0

.link-page
    display: flex
    flex-wrap: wrap
    margin: 0 -10px

.link-item
    display: flex
    align-items: center
    margin: 0 10px 18px
    padding: 4px
    width: calc(33% - 20px)
    border: 1px solid #f2f2f2
    border-radius: 3px

    img
        border-radius: 3px 0 0 3px

    .text-muted
        line-height: 1
        margin: 0

.link-url
    display: block
    width: 64px
    height: 64px
    margin-right: 20px

.link-name
    margin-top: 0
    margin-bottom: 6px
    font-size: 18px
    line-height: 1.2

.skill
    p
        margin-bottom: 4px !important

.icon-wrap
    display: inline-block
    width: 30px
    height: 30px
    text-align: center

.pure-java
    vertical-align: top

.pure-spring,
.pure-mysql,
.pure-docker,
.pure-shell,
.pure-linux,
.pure-git,
.pure-windows
    width: 20px
    height: 20px
    vertical-align: middle

.pure-html
    width: 26px
    height: 26px
    vertical-align: middle

.donate
    text-align: center
    img
        margin: 0 40px
        width: 255px
        height: 255px

.site-row
    display: flex

.site-cloum
    width: 30%

.site-title
    margin-bottom: 24px

.site-item
    display: flex
    align-items: center
    line-height: 20px
    font-size: 16px
    margin-bottom: 14px
    img
        margin-right: 6px
        width: 18px
        height: 18px
        border-radius: 50%