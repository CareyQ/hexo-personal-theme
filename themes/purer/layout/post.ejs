<article class="article" itemscope itemtype="http://schema.org/BlogPosting">
    <div class="article-header">
        <h1 class="article-title"><%= page.title %></h1>
        <div class="article-meta">
            <%- partial('common/post/date', { post: page, date_format: null }) %>
            <%- partial('common/post/category', { post: page }) %>
            <span class="article-tag">
                <i class="iconfont pure-tags"></i>
                <%- list_tags(page.tags, {
                   show_count: false,
                   style: 'link',
                   class: 'article-tag'
                }) %>
            </span>
            <%- partial('common/post/wordcount', { post: page }) %>
        </div>
    </div>

    <div class="article-content marked-body" itemprop="articleBody">
        <%- page.content %>
    </div>

    <div class="article-footer">
        <blockquote class="article-copyright">
            <p><strong>本文链接：</strong><a href="<%- page.permalink %>" title="<%= page.title %>" target="_blank" rel="external"><%- decodeURIComponent(page.permalink) %></a></p>
            <p><strong>版权声明：</strong>本博客所有文章除特别声明外，均采用 <a href="http://creativecommons.org/licenses/by/4.0/deed.zh" target="_blank" rel="external">CC BY 4.0 CN协议</a> 许可协议。转载请注明出处！</p>
        </blockquote>
    </div>

    <div class="article-author-profile">
        <% let profile = theme.profile; %>
        <div class="profile-left">
            <a href="/about" target="_blank">
                <img src="<%= url_for(profile.avatar) %>" alt="<%= profile.author %>">
            </a>
        </div>
        <div class="profile-body">
            <h3 class="profile-heading"><a href="/about" target="_blank"><span><%= profile.author %></span><small><%= profile.author_title %></small></a></h3>
            <div><%= profile.author_description %></div>
        </div>
    </div>
    <%- partial('common/comment') %>
</article>

<%- partial('common/post/nav') %>