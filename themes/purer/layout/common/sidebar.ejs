<aside class="sidebar" itemscope itemtype="http://schema.org/WPSideBar">
    <div class="sidebar-header">
        <% let profile = theme.profile %>
        <div class="sidebar-profile">
            <a id="avatar" href="<%= profile.follow %>" target="_blank">
                <img class="img-circle" src="<%= url_for(profile.avatar) %>" width="200" height="200">
            </a>
            <div class="profile-text">
                <h2 class="author"><%= profile.author %></h2>
                <p class="location">
                    <img src="/images/icon/location.svg">
                    <span><%= profile.location %></span>
                </p>
            </div>
            <div class="sidebar-button" onclick="clickshow('nav');">
                <i class="iconfont pure-menu"></i>
            </div>
        </div>
        <h3 class="author-title"><%= profile.author_title %></h3>
    </div>

    <nav id="nav" class="sidebar-nav" itemscope itemtype="http://schema.org/SiteNavigationElement" role="navigation">
        <ul class="menu-list">
            <% for (var i in theme.menu) { let itemName = i.toLowerCase(); %>
            <li class="menu-item">
                <a href="<%- url_for(theme.menu[i]) %>">
                    <i class="iconfont <%= theme.menu_icons[itemName] %>"></i>
                    <span class="menu-text"><%= __('menu.'+i) %></span>
                </a>
            </li>
            <% } %>
        </ul>
    </nav>

    <div class="sidebar-footer">
        <div class="social-list">
            <% let social = theme.profile.social; for (let i in social) { %>
                <a href="<%- url_for(social[i]) %>" target="_blank" title="<%= titlecase(i) %>"><i class="iconfont pure-<%= i %>"></i></a>
            <% } %>
        </ul>
        <p><a href="https://beian.miit.gov.cn/" target="_blank" rel="noopener noreferrer"><%= theme.site.beian %></a></p>
    </div>
</aside>